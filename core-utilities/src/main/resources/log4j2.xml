<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%highlight{%d{HH:mm:ss} [%t] %-5level (%X{X-Trace}) %logger{2.} - %msg %n%rEx{short}}</Pattern>
			</PatternLayout>
		</Console>
		<RollingFile name="RollingFile" 
				fileName="logs/application.log"
				filePattern="logs/application-%i.log.gz"
				ignoreExceptions="false">
			<PatternLayout>
				<Pattern>%d{dd MMM HH:mm:ss} [%t] %-5level (%X{X-Trace}) %logger{4.} - %msg %n%rEx{full}</Pattern>
			</PatternLayout>
			<Policies>
				<OnStartupTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="5"/>
		</RollingFile>
		<Failover name="Failover" primary="RollingFile">
			<Failovers>
				<AppenderRef ref="Console"/>
			</Failovers>
		</Failover>
	</Appenders>
	<Loggers>
		<Logger name="uk.co.bluegecko" level="INFO" additivity="true">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="uk.co.bluegecko.core.aspect" level="DEBUG" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Root level="warn">
			<AppenderRef ref="Failover" />
		</Root>
	</Loggers>
</Configuration>